---
import "~/styles/global.css";
import "@fontsource/dm-sans";

import Head, { type HeadProps } from "~/components/Head.astro";

interface Props {
  head: HeadProps;
}

const { head } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <Head {...head} />
  </head>
  <body>
    <main class="relative overflow-x-hidden">
      <slot />
    </main>
  </body>
</html>
