---
import CTA from "./CTA";
import { Icon } from "astro-icon/components";
import Pathways from "../assets/pathways.svg";

interface Props {
  callout?: string;
  description?: string;
}

const {
  callout = "Ready to build something exceptional?",
  description = "Book a 30‑min fit call. We’ll review goals, identify risks, and return a scoped plan in 48 hours",
} = Astro.props;
---

<footer class="relative z-50 overflow-hidden bg-white">
  <div
    class="relative z-10 mt-[66px] mb-[66px] flex flex-col items-center bg-black py-12 text-center text-white"
  >
    {
      Astro.slots.has("children") ? (
        <slot name="children" />
      ) : (
        <h2 class="font-alt text-primary mb-6 text-[22px] tracking-tight lg:text-[65px] xl:text-[81px]">
          {callout}
        </h2>
      )
    }

    {
      description && (
        <p class="mx-auto mb-6 max-w-[600px] px-4 text-white lg:text-lg">
          {description}
        </p>
      )
    }

    {
      Astro.slots.has("cta") ? (
        <slot name="cta" />
      ) : Astro.slots.has("children") ? null : (
        <CTA
          href="https://calendar.app.google/bptKpG7DXXLZve3r5"
          color="inverted"
        >
          Book a discovery call
        </CTA>
      )
    }
  </div>

  <Pathways
    class="absolute -top-[432px] -left-[343px] w-[1440px] lg:-top-[400px] lg:left-0 lg:w-full"
  />

  <div class="relative z-10 flex flex-col items-center py-10">
    <a
      href="mailto:contact@kmino.io"
      class="mb-6 text-sm font-medium text-black/80"
    >
      contact@kmino.io
    </a>

    <div class="mb-6 flex gap-6">
      <a
        href="https://github.com/Kmino-io"
        aria-label="GitHub"
        class="bg-primary/20 text-primary flex items-center rounded-full border p-2 transition hover:opacity-80"
        target="_blank"
      >
        <Icon name="ri:github-fill" size={19} />
      </a>

      <a
        href="https://www.linkedin.com/company/kminotech/"
        aria-label="LinkedIn"
        target="_blank"
        class="bg-primary/20 text-primary flex items-center rounded-full border p-2 transition hover:opacity-80"
      >
        <Icon name="ri:linkedin-fill" size={19} />
      </a>
    </div>

    <div class="text-center text-sm text-black/80">
      ©KMINO 2025, All rights reserved.
    </div>
  </div>
</footer>
